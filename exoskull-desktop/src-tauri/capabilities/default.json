{
  "identifier": "default",
  "description": "Default capability for ExoSkull Desktop",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:default",
    "notification:default",
    "os:default",
    "process:default",
    "opener:default",
    "fs:default",
    {
      "identifier": "fs:allow-read",
      "allow": [
        { "path": "$HOME/.exoskull/**" },
        { "path": "$APPDATA/**" },
        { "path": "$DOWNLOAD/**" }
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        { "path": "$HOME/.exoskull/**" },
        { "path": "$APPDATA/**" },
        { "path": "$DOWNLOAD/**" }
      ]
    }
  ]
}
