{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "app/api/twilio/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/chat/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/voice/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/webhooks/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/cron/**/*.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/master-scheduler",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/intervention-executor",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/post-conversation",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/pulse",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/highlight-decay",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/bronze-etl",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/silver-etl",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/gold-etl",
      "schedule": "0 4 * * *"
    }
  ]
}
