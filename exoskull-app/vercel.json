{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "app/api/twilio/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/chat/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/voice/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/webhooks/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/cron/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/skills/generate/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/gateway/**/*.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/master-scheduler",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/intervention-executor",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/post-conversation",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/pulse",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/highlight-decay",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/bronze-etl",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/silver-etl",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/gold-etl",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/business-metrics",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/cron/dunning",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/guardian-effectiveness",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/guardian-values",
      "schedule": "0 8 * * 0"
    },
    {
      "path": "/api/cron/gap-detection",
      "schedule": "0 9 * * 0"
    },
    {
      "path": "/api/cron/engagement-scoring",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/drip-engine",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/admin-metrics",
      "schedule": "30 5 * * *"
    },
    {
      "path": "/api/cron/daily-summary",
      "schedule": "0 19 * * *"
    },
    {
      "path": "/api/cron/skill-lifecycle",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/goal-progress",
      "schedule": "0 20 * * *"
    },
    {
      "path": "/api/cron/self-optimization",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/outbound-monitor",
      "schedule": "0 */2 * * *"
    },
    {
      "path": "/api/cron/weekly-summary",
      "schedule": "0 18 * * 0"
    },
    {
      "path": "/api/cron/monthly-summary",
      "schedule": "0 9 1 * *"
    },
    {
      "path": "/api/cron/async-tasks",
      "schedule": "* * * * *"
    }
  ]
}
