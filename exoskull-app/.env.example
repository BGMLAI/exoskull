NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# --- CORE: App URL ---
NEXT_PUBLIC_APP_URL="https://exoskull.xyz"

# --- CORE: AI Models ---
# Tier 4: Claude Opus 4.6 (strategy, crisis)
